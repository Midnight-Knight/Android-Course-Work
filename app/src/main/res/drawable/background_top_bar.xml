<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Верхняя граница -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?MyColorSecondary" /> <!-- Цвет границы -->
            <size
                android:width="0dp"
                android:height="2dp" /> <!-- Толщина границы -->
        </shape>
    </item>
    <!-- Фон -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="?MyColorMain" /> <!-- Цвет фона -->
        </shape>
    </item>
</layer-list>